<style>
	.team__section {
		margin: var(--section-margin) auto;
	}

	.team__title-container {
		text-align: center;
		margin-bottom: 2rem;
	}

	.team__title-container h2 {
		margin: 0;
	}

	.team__members-container {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
	}

	.team-member {
		display: flex;
		flex-direction: column;
		align-items: center;
		background-color: #f9f9f9;
		padding: 1rem;
		border-radius: 8px;
	}

	.team-member__image {
		width: 80px;
		height: 80px;
		border-radius: 50%;
		object-fit: cover;
		margin-bottom: 1rem;
	}

	.team-member__info {
		text-align: center;
	}

	.team-member__name {
		font-weight: bold;
	}

	.team-member__role {
		color: #555;
		font-size: 0.9rem;
	}

	/* Center the last row if the number of members is not a multiple of 3 */
	.team__members-container::after {
		content: "";
		display: block;
	}

	.team__members-container > .team-member:nth-last-child(1):nth-child(3n + 1),
	.team__members-container > .team-member:nth-last-child(2):nth-child(3n + 1) {
		grid-column: span 3;
		justify-self: center;
	}

	.team__members-container > .team-member:nth-last-child(1):nth-child(3n + 2) {
		grid-column: span 2;
		justify-self: center;
	}

	/* Add this rule to ensure the last row is centered */
	.team__members-container > .team-member:nth-last-child(1):nth-child(3n + 1) ~ .team-member,
	.team__members-container > .team-member:nth-last-child(2):nth-child(3n + 1) ~ .team-member {
		grid-column: span 3;
		justify-self: center;
	}

	@media (max-width: 768px) {
		.team__members-container {
			grid-template-columns: 1fr;
		}
	}
</style>