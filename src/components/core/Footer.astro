<style>
  footer {
    --footer-bg: var(--theme-primary);
    --footer-color: var(--theme-on-primary);
    background-color: var(--footer-bg);
    color: var(--footer-color);
    width: 100vw; /* Ensure the footer spans the entire width of the viewport */
    margin-left: calc(50% - 50vw); /* Center the footer */
    position: relative; /* Ensure it stays within the normal document flow */
    /* border-top-left-radius: var(--theme-shape-radius);
    border-top-right-radius: var(--theme-shape-radius); */
  }
  .footer-grid__container {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* Ensure three equal columns */
    justify-items: center; /* Center logos in each column */
    gap: 3rem; /* Add gap between logos */
    padding: 2rem 0; /* Add some padding to separate from other elements */
    max-width: var(--container-max-width); /* Ensure the content stays centered */
    margin: 0 auto; /* Center the content */
  } 
  .footer-socials__list {
    margin: 1rem 0;
    padding: 0;
    display: flex;
    list-style: none;
  }
  .footer-socials__item {
    margin-right: 0.5rem;
  }
  .footer-link__list {
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .footer-link__list li {
    margin-bottom: 0.5rem;
  }
  .footer-link__list li a {
    text-decoration: none;
  }
  .footer-link__list li a:hover {
    opacity: 0.84;
  }
  .footer-copyright__container {
    display: flex;
    flex-direction: column;
    /* justify-content: space-between; */
  }
  .footer-copyright__container p {
    font-size: var(--font-size-sm);
  }
  .footer-sponsores__container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 0 auto;
    width: 50%; /* Set width to auto so it adapts to content size */
  }
  @media (max-width: 768px) {
    .footer-grid__container :first-child {
      grid-column: 1/-1;
    }
    .footer-grid__container {
      padding: 5vh 0;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
  @media (max-width: 600px) {
    .footer-grid__container {
      padding: 5vh 0;
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    .footer-copyright__container {
      flex-direction: column;
    }
  }
</style>